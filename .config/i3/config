set $mod Mod1

font pango:monospace 8

# startup stuff
exec --no-startup-id feh --bg-scale ~/Wallpapers/saturn.jpg
exec --no-startup-id picom     
exec --no-startup-id ulauncher --hide-window
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id pasystray
exec --no-startup-id redshift-gtk -l 41.9027:12.4963
exec --no-startup-id python $HOME/Scripts/i3-hud-menu/hud-menu-service.py
exec --no-startup-id setxkbmap -layout it
exec --no-startup-id thunar --daemon
exec --no-startup-id xbindkeys
exec --no-startup-id kwallet5
exec --no-startup-id cbatticon
exec --no-startup-id yakuake    
exec --no-startup-id touchegg 
## gnome keyring
exec --no-startup-id dbus-update-activation-environment --all

# autolock daemons
exec --no-startup-id "xautolock -detectsleep -time 5 -corner ---- -locker \"i3lockmore --image-fill ~/Wallpapers/saturn.jpg --blur\""
exec --no-startup-id "xautolock -detectsleep -time 10 -locker \"systemctl suspend\""

# daemon to show i3bar in empty ws only
#exec --no-startup-id ~/.config/i3/scripts/detect-workspace-change.sh

# daemon to adjust brightness when AC is connected/disconnected
exec --no-startup-id ~/.config/i3/scripts/set-default-brightness-lvl.sh

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use brightnessctl to set brigthness level
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-
bindsym Ctrl+$mod+a exec --no-startup-id pactl set-card-profile 0 output:hdmi-stereo-extra1+input:analog-stereo &&  pactl set-card-profile 0 output:analog-stereo+input:analog-stereo

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
bindsym Ctrl+$mod+T exec --no-startup-id alacritty 
#-e tmuxinator start 'Utils - Terminals'

# kill focused window
bindsym $mod+Escape kill

# change focus
bindsym Ctrl+Shift+Left focus left
bindsym Ctrl+Shift+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+l move right

workspace_layout tabbed

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

bar {
    colors {
        background #00111B
        active_workspace #398A83 #398A83 #398A83
        focused_workspace #398A83 #398A83 #DAE5E6 
        urgent_workspace #B92A1C #B92A1C #00111B
}
    status_command i3status
    font pango: DejaVu Sans Mono 10
    separator_symbol " "
    #mode hide
    #hidden_state hide
    #modifier Mod1
}

# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace
bindsym $mod+Shift+r exec i3-msg restart && killall i3-layouts && i3-layouts   

# border
for_window [class=".*"] border pixel 3

# no boarder and floating exceptions

for_window [class="yakuake"] floating enable
for_window [class="yakuake"] border pixel 0

for_window [class="Ulauncher"] floating enable
for_window [class="Ulauncher"] border pixel 0

for_window [class="com.github.joseexposito.touche"] floating enable
for_window [class="com.github.joseexposito.touche"] border pixel 0

for_window [window_role="alert"] floating enable
for_window [window_role="alert"] border pixel 0
for_window [class="Alert"] focus_on_window_activation none

for_window [title="Loading" class="Lens"] border pixel 0 
for_window [title="Loading" class="Lens"] floating enable 
for_window [title="Loading" class="Lens"] move position center

for_window [class="Nm-applet"] floating enable
for_window [class="Nm-applet"] border pixel 0

smart_borders on

## keybinds
bindsym Ctrl+$mod+b exec --no-startup-id firefox
bindsym Ctrl+$mod+Right workspace next
bindsym Ctrl+$mod+Left workspace prev
bindsym Ctrl+$mod+m exec --no-startup-id python $HOME/Scripts/i3-hud-menu/hud-menu.py dmenu
bindsym $mod+backslash exec --no-startup-id dbus-send --type=method_call --dest=org.kde.yakuake /yakuake/window org.kde.yakuake.toggleWindowState
bindsym $mod+Tab exec --no-startup-id dbus-send --type=method_call --dest=org.kde.yakuake /yakuake/window org.kde.yakuake.toggleWindowState
bindsym Super_L exec --no-startup-id ulauncher-toggle
bindsym Ctrl+$mod+plus exec --no-startup-id $HOME/.config/i3/scripts/new_ws.sh
bindsym Ctrl+$mod+space exec --no-startup-id $HOME/.config/i3/scripts/tidy.sh
bindsym Control+Mod1+l exec --no-startup-id "i3lockmore --image-fill ~/Wallpapers/saturn.jpg "

